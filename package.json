{
  "name": "bioviewer",
  "displayName": "BioViewer",
  "publisher": "shuuul",
  "description": "VSCode Extension for visualizing Biological Macrostructures and Electron Imaging.",
  "version": "0.0.4",
  "repository": "https://github.com/shuuul/bioviewer.git",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other",
    "Visualization",
    "Data Science"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bioviewer.startBioViewer",
        "title": "BioViewer: Start BioViewer with ID in New Panel"
      },
      {
        "command": "bioviewer.activateFromFiles",
        "title": "BioViewer: Open File(s) in New BioViewer Panel"
      },
      {
        "command": "bioviewer.activateFromFolder",
        "title": "BioViewer: Open Folder in New BioViewer Panel"
      },
      {
        "command": "bioviewer.appendFile",
        "title": "BioViewer: Append File(s) to Current BioViewer Panel"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname =~ /\\.(pdb|cif|mmcif|mcif|ent|map|mrc)$/i",
          "command": "bioviewer.activateFromFiles",
          "group": "navigation"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "bioviewer.activateFromFolder",
          "group": "navigation"
        },
        {
          "when": "resourceExtname =~ /\\.(pdb|cif|mmcif|mcif|ent|map|mrc|ccp4)$/",
          "command": "bioviewer.appendFile",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "molstar": "^4.6.0"
  },
  "files": [
    "dist",
    "dist/webview/bioviewer.html",
    "dist/molstar"
  ]
}
